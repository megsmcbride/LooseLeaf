<div class="header-user">
  <% if (id) { %>
  <div class="btn-group">
    <button
      type="button"
      class="btn btn-outline-success dropdown-toggle"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <%= name %>
    </button>
    <ul class="dropdown-menu">
      <li>
        <a class="dropdown-item" href="/resources/my_resources/<%= id %>">My Leaves</a>
      </li>
      <li>
        <a class="dropdown-item" href="/resources/create">Create Leaf</a>
      </li>
      <li>
        <a class="dropdown-item" href="/profiles/:id">Edit Profile</a>
      </li>
      <hr class="dropdown-divider" />
